//- Possible params example: color-block({title: 'Dark Shade', hexcode: '#1f2041', opacity: 0.5})
mixin color-block(params)
  - var resultColor = params.hexcode

  if (params.opacity)
    - resultColor = 'rgba(' + parseInt(params.hexcode.substring(1,3), 16) + ', ' + parseInt(params.hexcode.substring(3,5), 16) + ', ' + parseInt(params.hexcode.substring(5,7), 16) + ', ' + params.opacity + ')'

  .color-block
    .color-block__tile(style='background-color: ' + resultColor)
    .color-block__info
      if (params.opacity)
        h2.color-block__title= params.title + ' ' + (params.opacity * 100).toString() + '%'
      else
        h2.color-block__title= params.title
      p.color-block__code= params.hexcode

